<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_disciplinas"
    android:layout_margin="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="16dp"
    android:foreground="?android:attr/selectableItemBackground"    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_border_pastas"
        android:padding="10dp">

        <TextView
            android:id="@+id/cardNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="70dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDiscusao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardNome"
            android:layout_alignParentStart="true"
            android:layout_marginStart="70dp"
            android:textColor="@android:color/black"
            android:text="DiscussÃ£o"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cardDiscusao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDiscusao"
            android:layout_marginStart="75dp"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <ImageView
                android:id="@+id/cardImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_folder"/>

            <ProgressBar
                android:id="@+id/cardProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible" />
        </FrameLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>